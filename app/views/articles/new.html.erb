<div class="new-form">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3" id="form-article">
      <h1>Bring it on!</h1>
      <p>Add a new article to the Arena99 and make it available to the rest of the 99'ers community. Yey you can!</p>
        <%= simple_form_for [@article] do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.label :start_date %><br>
          <%= f.date_select :start_date, as: :string, required: false, input_html: {class: "datepicker"} %><br><br>
          <%= f.label :end_date %><br>
          <%= f.date_select :end_date, as: :string, required: false, input_html: {class: "datepicker" } %><br><br>
          <%= f.input :address%>
          <%= f.input :picture%>
          <%= f.input :price%>
          <%= f.association :sport,:collection => @sports, include_blank: false%>
          <%= f.association :state,:collection => @states, label_method: :description, include_blank: false %>
          <%= f.submit "CONFIRM!", id:"submit-btn", class:"hvr-grow" %>
        <% end %>
    </div>
  </div>
</div>

