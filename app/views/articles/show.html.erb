<h1>Articles#show</h1>
<p> <%=  @article.name %> </p>
<p>Find me in app/views/articles/show.html.erb</p>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Book a new sports article !</h1>
      <%= simple_form_for [@article, @booking] do |f| %>
        <%= f.input :start_date%>
        <%= f.input :end_date%>
        <%= f.input :price%>
        <%= f.submit "Book now!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

